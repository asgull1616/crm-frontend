import { NextResponse } from 'next/server'
import type { NextRequest } from 'next/server'

export function middleware(request: NextRequest) {
  const isLoggedIn = request.cookies.get('loggedIn')?.value === 'true'
  const { pathname } = request.nextUrl

  // EĞER KULLANICI GİRİŞ YAPMIŞSA VE ANA SAYFAYSA: Dashboard'a gönder
  if (isLoggedIn && pathname === '/') {
    return NextResponse.redirect(new URL('/dashboards/analytics/user', request.url))
  }

  // EĞER GİRİŞ YAPMAMIŞSA: '/' yolunda WelcomingPage'i görmesine izin ver (Yönlendirme yapma!)
  // Buradaki 'minimal' yönlendirmesini tamamen sildik.

  return NextResponse.next()
}

export const config = {
  matcher: ['/((?!api|_next/static|_next/image|favicon.ico).*)'],
}